<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#004499CC"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/header"
                android:textSize="30dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:text="close the window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <GridLayout
            android:layout_weight="3"
            android:layout_marginHorizontal="50dp"
            android:background="#00CC99CC"
            android:rowCount="4"
            android:columnCount="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_border_grey"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnSpan="8"
                android:layout_gravity="fill_horizontal"
                android:orientation="horizontal"
                android:layout_columnWeight="8"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/user"
                    android:scaleType="centerCrop"/>
                <EditText
                    android:id="@+id/idInput"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="username"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_border_grey"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnSpan="8"
                android:layout_gravity="fill_horizontal"
                android:orientation="horizontal"
                android:layout_columnWeight="8"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/login"
                    android:scaleType="centerInside"/>
                <EditText
                    android:id="@+id/pwInput"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_columnWeight="7"
                    android:hint="password"/>
            </LinearLayout>
            <Button
                android:id="@+id/login"
                android:background="@drawable/round_border_grey"
                android:text="login"
                android:layout_columnWeight="8"
                android:layout_gravity="fill_horizontal"
                android:layout_columnSpan="8"
                android:layout_column="1"
                android:layout_row="2"/>
            <CheckBox
                android:id="@+id/autoLogin"
                android:text="   login on start"
                android:layout_columnWeight="8"
                android:layout_gravity="fill_horizontal"
                android:layout_columnSpan="8"
                android:layout_column="1"
                android:layout_row="3"/>

        </GridLayout>

        <RelativeLayout
            android:gravity="center_horizontal"
            android:background="#0033BB33"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/accountText"
                android:text="still not signed up?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/signup"
                android:autoLink="all"
                android:textColor="#0066aa"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/accountText"
                android:text="sign up here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>